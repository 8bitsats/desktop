# ==== Solana Configuration ====
# RPC URL with API key (preferably Helius for best performance)
SOLANA_RPC_URL="https://api.helius-rpc.com/?api-key=your-helius-key"

# Your Solana wallet's private key (KEEP THIS SECRET!)
SOLANA_PRIVATE_KEY="your-private-key"

# Public key to use for fee payment
SOLANA_FEE_PAYER="your-fee-payer-public-key"

# Network to use (mainnet-beta, testnet, devnet)
SOLANA_NETWORK="mainnet-beta"

# Transaction timeout in seconds
SOLANA_TX_TIMEOUT="60"

# ==== API Keys for Various Services ====
# OpenAI API key for GPT models
OPENAI_API_KEY="your-openai-api-key"

# Anthropic API key for Claude models
ANTHROPIC_API_KEY="your-anthropic-api-key"

# OpenRouter API key for access to multiple models
OPENROUTER_API_KEY="your-openrouter-api-key"

# Birdeye API key for token analytics
BIRDEYE_API_KEY="your-birdeye-api-key"

# XAI API key (optional)
XAI_API_KEY="your-xai-api-key"

# ==== Scrapybara Integration ====
# API key for Scrapybara browser automation and streaming
SCRAPY_API_KEY="your-scrapybara-api-key"

# Default instance type (browser, ubuntu, windows)
SCRAPY_INSTANCE_TYPE="browser"

# Instance timeout in hours
SCRAPY_TIMEOUT_HOURS="1"

# Whether to automatically start Scrapybara with dashboard
SCRAPY_AUTO_START="false"

# Whether to save browser authentication state
SCRAPY_SAVE_AUTH="true"

# ==== Local AI Configuration ====
# Ollama API base URL for local models
OLLAMA_API_BASE="http://localhost:11434"

# Default model to use (from config.json)
DEFAULT_MODEL="anthropic/claude-3-opus-20240229"

# Browser automation model
BROWSER_MODEL="openai/gpt-4-turbo"

# ==== UI Configuration ====
# Theme (dark, light)
UI_THEME="dark"

# Refresh interval in milliseconds
REFRESH_INTERVAL_MS="5000"

# Auto-update dashboard data
AUTO_UPDATE_ENABLED="true"

# Stream view height in pixels
STREAM_HEIGHT_PX="500"

# ==== Trading Configuration ====
# Default slippage tolerance in basis points (1% = 100)
DEFAULT_SLIPPAGE_BPS="100"

# Whether to auto-confirm trades without prompting
AUTO_CONFIRM_TRADES="false"

# Maximum number of retries for failed transactions
MAX_TX_RETRIES="3"

# ==== Development Settings ====
# Enable debug mode (true, false)
DEBUG_MODE="false"

# Log level (debug, info, warning, error)
LOG_LEVEL="info"
